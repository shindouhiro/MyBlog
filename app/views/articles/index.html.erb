<h1 id="page_title">Stuff I've Written</h1>

<div id="posts_wrapper" class="skinny_wrapper">
  
  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.created_at.strftime("%Y-%m-%d") %></p>
      <h2><%= link_to post.title, article_path(post) %></h2>
      <hr>
    </div>
  <% end %>


</div>

<div class="pagination">
  <sapn class="previous_page disabled">Previous</sapn>
  <em class="current">1</em>
  <a href="" rel="next">2</a>
  <a href="" class="next_page">Next</a>
</div>